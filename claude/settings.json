{
    "hooks": {
        "PreToolUse": [
            {
                "matcher": "Bash",
                "hooks": [
                    {
                        "type": "command",
                        "command": "~/.claude/hooks/pre-bash.sh"
                    }
                ]
            }
        ],
        "PostToolUse": [
            {
                "matcher": "Edit|Write",
                "hooks": [
                    {
                        "type": "command",
                        "command": "~/.claude/hooks/post-write.sh"
                    }
                ]
            }
        ]
    },
    "contextFiles": [
        "CLAUDE.md"
    ]
}
